<div class='post hidden'>
<%= form_for Image.new() do |f| %>
  title
  <%= f.text_field :title %>
  photo
  <%= f.text_field :photo %>
  url
  <%= f.text_field :link %>
  <%= f.submit %>
<% end %>
</div>

<%= flash[:success] %> 

<section class='main'>
  <% @images.each do |i| %>
    <%= link_to image_path(i.id) do %>
      <div class='thumb'>
         <%= image_tag i.avatar.url(:medium) %>
        <div class='txthover' >
          <%= i.title %>
          <%= i.votes.length %>
        </div>
      </div>
    <% end %>
  <% end %>
</section>


